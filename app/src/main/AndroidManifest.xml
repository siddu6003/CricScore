<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iplguru">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Completed"></activity>
        <activity android:name=".Livescore" />
        <activity android:name=".Article" />
        <activity android:name=".TeamPlayers" />
        <activity android:name=".statsseasonBowling" />
        <activity android:name=".statsseasonBatting" />
        <activity android:name=".statsoverallBowling" />
        <activity android:name=".select" />
        <activity android:name=".statsoverall" />
        <activity android:name=".Teams" />
        <activity android:name=".PointsTable" />
        <activity android:name=".Schedule" />
        <activity android:name=".News" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service android:name=".Notifications">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>